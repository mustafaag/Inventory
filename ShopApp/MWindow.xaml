                <DataGridTextColumn Header = "Njesia" Binding = "{Binding Njesia}" MinWidth="50" />
                <DataGridTextColumn Header = "Sasia" Binding = "{Binding Sasia}"  MinWidth="50" />
                <DataGridTextColumn Header = "Cmimi me TVSH" Binding = "{Binding Cmimi_me_TVSH}" MinWidth="100" />
                <DataGridTextColumn Header = "Zbritje" Binding = "{Binding Zbritje}"  MinWidth="50" />
                <DataGridTextColumn Header = "Totali" Binding = "{Binding Totali}" MinWidth="100" />
            </DataGrid.Columns>

        </DataGrid>

    </Grid>

</Window>
