<Window x:Class="ShopApp.MWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp"
        mc:Ignorable="d"
        Title="Shop Application" MinHeight="650" MinWidth="1000">
    <Grid  Background="Salmon">
        <Grid Grid.Row="0"
          Grid.Column="0"
          MinHeight="70"
          MaxHeight="50"
          VerticalAlignment="Top" Background="#FFAE9E9E" Height="48" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450*"/>
                <ColumnDefinition Width="300*"/>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Top"  Content="Username" Margin="70,0,150,0" FontSize="15" />
            <Label  Content="Adresa" VerticalAlignment="Bottom"  Margin="70,0,150,15" FontSize="15" />
            <Label  Content="STORE NAME"  VerticalAlignment="Center"  HorizontalAlignment="Right" Margin="0,5,0,20" Width="130" Height="45" FontSize="16" FontWeight="Bold" Grid.Column="1"/>
            <Border HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="60" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFD04A4A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
        <Grid
          Grid.Column="0"
          HorizontalAlignment="Stretch" Background="LightGray" Margin="0,67,0,0" Height="437" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Margin="-5,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                  Grid.Column="0"
                  Background="LightGray"
                  MaxWidth="50"
                  HorizontalAlignment="Left" Margin="4,0,0,-18" Height="335" VerticalAlignment="Bottom" Width="42">
                    <StackPanel Margin="1,-101,-1,0">
                        <Button Content="F1" MinHeight="40"   VerticalAlignment="Stretch" MinWidth="40" Click="Button_Click" Height="11"/>
                        <Button Content="F2" MinHeight="40"   VerticalAlignment="Stretch" MinWidth="40"/>
                        <Button Content="F3" MinHeight="40" MinWidth="40" Width="auto"  VerticalAlignment="Stretch"/>
                        <Button Content="F4" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F5" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F6" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F7" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F8" MinHeight="40" MinWidth="40"  VerticalAlignment="Stretch"/>
                        <Button Content="F9" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch" Height="38"/>
                        <Button Content="F10" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch" Height="38" Click="Button_Click_3"/>
                        <Button Content="F11" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch" Height="29" Click="Button_Click_3" RenderTransformOrigin="0.483,0.437" Margin="0,0,-3,0"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0"
                  Background="White"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch" Margin="47,40,0,138" >
                    <StackPanel Margin="0,0,0,0"/>
                </Grid>
                <Grid>
                    <DataGrid Name = "dataGrid" AlternatingRowBackground = "LightBlue"  
         AlternationCount = "2" AutoGenerateColumns = "False" Margin="46,40,0,137">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header = "Shifra" Binding = "{Binding Shifra}" Width="80" />
                            <DataGridTextColumn Header = "Emri" Binding = "{Binding Emri}" Width="160" />
                            <DataGridTextColumn Header = "Njesia" Binding = "{Binding Njesia}" Width="60"/>
                            <DataGridTextColumn Header = "Sasia" Binding = "{Binding Sasia}" Width="70" />
                            <DataGridTextColumn Header = "Cmimi me TVSH" Binding = "{Binding Cmimi_me_TVSH}" />
                            <DataGridTextColumn Header = "Zbritje" Binding = "{Binding Zbritje}" Width="60" />
                            <DataGridTextColumn Header = "Cmimi me Zbritje" Binding = "{Binding Cmimi_me_Zbritje}" />
                            <DataGridTextColumn Header = "Vlera" Binding = "{Binding Vlera}" Width="90" />
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>


                <DataGrid MinWidth="500" Background="Yellow" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Margin="46,0,0,378" SelectionChanged="DataGrid_SelectionChanged_1"/>
                <Border HorizontalAlignment="Left" Height="130" Margin="47,287,0,0" VerticalAlignment="Top" Width="339" RenderTransformOrigin="0.507,1.714">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FF803939" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBox x:Name="textBox" HorizontalAlignment="Right" Height="70" Margin="0,287,10,0" TextWrapping="Wrap" Text="TOTALI" VerticalAlignment="Top" Width="244" FontSize="24" FontWeight="Bold" TextChanged="TextBox_TextChanged" Background="Yellow"/>
                <TextBox HorizontalAlignment="Left" Height="20" Margin="58,15,0,0" TextWrapping="Wrap" Text="Barcode" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.033,0.857" TextChanged="TextBox_TextChanged_1"/>
            </Grid>
            <Button x:Name="button" Content="PAGUAJ" HorizontalAlignment="Right" Margin="0,372,10,0" VerticalAlignment="Top" Width="243" Height="42" FontSize="24" FontWeight="Bold" Background="#FF959C96" Click="Button_Click_2"/>
        </Grid>

    </Grid>

</Window>
