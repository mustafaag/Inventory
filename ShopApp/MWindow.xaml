<Window x:Class="ShopApp.MWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp"
        mc:Ignorable="d"
        Title="Shop Application" MinHeight="650" MinWidth="1000">
    <Grid  Background="Salmon">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
          Grid.Column="0"
          Background="Red"
          MinHeight="50"
          MaxHeight="50"
          VerticalAlignment="Top"
          Margin="0,10">
            <Label VerticalAlignment="Top"  Content="Username"  Padding="10,0,0,10"/>
            <Label  Content="Adresa" VerticalAlignment="Bottom" Padding="10,30,0,0"/>
            <Label  Content="STORE NAME"  VerticalAlignment="Center"  HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="1"
          Grid.Column="0"
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch" Background="Green">
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                  Grid.Column="0"
                  Background="Red"
                  MaxWidth="50"                 
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left">
                    <StackPanel   VerticalAlignment="Stretch">
                        <Button Content="F1" MinHeight="40"   VerticalAlignment="Stretch" MinWidth="40"/>
                        <Button Content="F2" MinHeight="40"   VerticalAlignment="Stretch" MinWidth="40"/>
                        <Button Content="F3" MinHeight="40" MinWidth="40" Width="auto"  VerticalAlignment="Stretch"/>
                        <Button Content="F4" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F5" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F6" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F7" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F8" MinHeight="40" MinWidth="40"  VerticalAlignment="Stretch"/>
                        <Button Content="F9" MinHeight="40" MinWidth="40"   VerticalAlignment="Stretch"/>
                        <Button Content="F10" MinHeight="40" MinWidth="40"  VerticalAlignment="Stretch"/>
                        <Button Content="F11" MinHeight="40" MinWidth="40"  VerticalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0"
                  Grid.Column="1"
                  Background="Black"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Left" >
                    <StackPanel>
                        <DataGrid MinWidth="500" Background="Yellow" VerticalAlignment="Stretch"  HorizontalAlignment="Center">
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        
    </Grid>
    
</Window>
