                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">

                    <GradientStop Color="#FF959C96" Offset="0"/>
                    <GradientStop Color="AliceBlue" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Label VerticalAlignment="Top"  Content="Username" Foreground="LightSkyBlue"  Margin="199,19,427,0" FontSize="14" FontWeight="Bold" />
            <Label  Content="STORE NAME"  VerticalAlignment="Center"  HorizontalAlignment="Right" Foreground="LightSkyBlue" Margin="0,19,639,22"  FontSize="16" FontWeight="Bold" />
            <Label Content="Date" HorizontalAlignment="Left" Margin="379,9,0,0" VerticalAlignment="Top" Width="148" Height="30" Foreground="Red" FontSize="16" FontWeight="Bold"/>
            <Label Content="Time" HorizontalAlignment="Left" Margin="379,29,0,0" VerticalAlignment="Top" Width="148" Foreground="Red" FontSize="12" FontWeight="Bold"/>
