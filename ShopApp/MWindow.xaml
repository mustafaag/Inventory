            <Button Content="F6" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <Button Content="F7" HorizontalAlignment="Left" Margin="190,40,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <Button Content="F8" HorizontalAlignment="Left" Margin="280,40,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <Button Content="F9" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <Button Content="F10" HorizontalAlignment="Left" Margin="100,70,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <Button Content="F11" HorizontalAlignment="Left" Margin="190,70,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <Button Content="F12" HorizontalAlignment="Left" Margin="280,70,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0"/>
            <TextBlock HorizontalAlignment="Left" Margin="518,30,0,0" TextWrapping="Wrap" Text="Totali  pa zbritje:" VerticalAlignment="Top" Foreground="Black" RenderTransformOrigin="0.67,0.877" Width="95" />
            <TextBlock HorizontalAlignment="Left" Margin="393,10,0,0" TextWrapping="Wrap" Text="Klienti:" VerticalAlignment="Top" Foreground="Black" RenderTransformOrigin="0.507,0.564" />
            <TextBlock HorizontalAlignment="Left" Margin="559,51,0,0" TextWrapping="Wrap" Text="   Zbritje:" VerticalAlignment="Top" Foreground="Black" Width="54" />
