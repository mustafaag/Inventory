<Window x:Class="ShopApp.AddMeasure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp"
        mc:Ignorable="d"
        Title="Add Njesi" Height="auto" Width="500" HorizontalAlignment="Center" Background="#2e3137" Loaded="Window_Loaded">
    
    <Border Margin="20" Background="White">


        <StackPanel Margin="20"    >
            <Label Content="Add Njesi" Foreground="#2e3137" FontSize="30" HorizontalAlignment="Center" FontWeight="Medium" />
            <Separator/>
            <Label  Foreground="#2e3137" FontSize="20" Margin="30">Name:</Label>
            <TextBox Name="txtMeasureName" Background="#545d5a" Foreground="White" FontSize="20" Margin="30 0"></TextBox>
            <Label  Foreground="#2e3137" FontSize="20" Margin="30">Desc</Label>
            <TextBox Name="txtMeasureDesc"   Background="#545d5a" Foreground="White" FontSize="20" Margin="30 0 30 0"></TextBox>
            
           

     
            <Button Name="bntSubmit"  Content="Save" Click="BntSubmit_Click" Background="#545d5a" Height="50" Foreground="White" FontSize="25" Margin="30 30" />

        </StackPanel>
    </Border>
</Window>
